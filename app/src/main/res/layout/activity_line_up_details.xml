<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/artistImage"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:layout_margin="0dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/artistName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/artistImage"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="5dip"
                android:background="@android:color/transparent"
                android:fontFamily="@font/pt_sans_regular"
                android:text="Name"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30sp" />
        </RelativeLayout>


        <TextView
            android:id="@+id/artistBio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/artistImage"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="15dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/pt_sans_regular"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Bio"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/fImgButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:tint="@color/facebook_main"
                app:srcCompat="@drawable/ic_facebook_black_36dp" />

            <ImageButton
                android:id="@+id/tImgButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:tint="@color/twitter_main"
                app:srcCompat="@drawable/ic_twitter_black_36dp" />

            <ImageButton
                android:id="@+id/wImgButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/ic_web_black_36dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>

